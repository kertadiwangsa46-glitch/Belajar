{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "functions": {
    "api/proxy.js": {
      "maxDuration": 30,
      "memory": 256,
      "runtime": "nodejs18.x"
    },
    "api/proxy-img.js": {
      "maxDuration": 45,
      "memory": 256,
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/proxy/(.*)",
      "destination": "/api/proxy?rest=$1"
    },
    {
      "source": "/api/proxy-img",
      "destination": "/api/proxy-img"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization, Origin, Accept" }
      ]
    }
  ]
}
